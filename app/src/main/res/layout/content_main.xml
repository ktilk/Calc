<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResultLabel"
            style="@style/textview_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result: " />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewResultLabel"
            android:text="---" />
    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button00"
            android:onClick="buttonClicked"
            android:text="Clear"
            style="@drawable/button_calc"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="50%" />

        <Button
            android:id="@+id/button01"
            android:layout_alignTop="@id/button00"
            android:layout_toRightOf="@id/button00"
            android:onClick="buttonClicked"
            android:text="/"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button15"
            android:layout_alignTop="@id/button00"
            android:layout_toRightOf="@id/button01"
            android:onClick="buttonClicked"
            android:text="*"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button02"
            android:layout_below="@id/button00"
            android:onClick="buttonClicked"
            android:text="7"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button03"
            android:layout_alignTop="@id/button02"
            android:layout_toRightOf="@id/button02"
            android:onClick="buttonClicked"
            android:text="8"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button04"
            android:layout_alignTop="@id/button02"
            android:layout_toRightOf="@id/button03"
            android:onClick="buttonClicked"
            android:text="9"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button05"
            android:layout_alignTop="@id/button02"
            android:layout_toRightOf="@id/button04"
            android:onClick="buttonClicked"
            android:text="-"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button06"
            android:layout_below="@id/button02"
            android:onClick="buttonClicked"
            android:text="5"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button07"
            android:layout_alignTop="@id/button06"
            android:layout_toRightOf="@id/button06"
            android:onClick="buttonClicked"
            android:text="6"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button08"
            android:layout_alignTop="@id/button06"
            android:layout_toRightOf="@id/button07"
            android:onClick="buttonClicked"
            android:text="7"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button09"
            android:layout_alignTop="@id/button06"
            android:layout_toRightOf="@id/button08"
            android:onClick="buttonClicked"
            android:text="+"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button10"
            android:layout_below="@id/button06"
            android:onClick="buttonClicked"
            android:text="1"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button11"
            android:layout_alignTop="@id/button10"
            android:layout_toRightOf="@id/button10"
            android:onClick="buttonClicked"
            android:text="2"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button12"
            android:layout_alignTop="@id/button10"
            android:layout_toRightOf="@id/button11"
            android:onClick="buttonClicked"
            android:text="3"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button13"
            android:layout_alignTop="@id/button10"
            android:layout_toRightOf="@id/button12"
            android:onClick="buttonClicked"
            android:text="="
            app:layout_heightPercent="40%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button14"
            android:layout_below="@id/button10"
            android:onClick="buttonClicked"
            android:text="0"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="50%" />

        <Button
            android:id="@+id/button16"
            android:layout_alignTop="@id/button14"
            android:layout_toRightOf="@id/button14"
            android:onClick="buttonClicked"
            android:text=","
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <!--<Button
            android:id="@+id/button17"
            android:layout_alignTop="@id/button14"
            android:layout_toRightOf="@id/button16"
            android:onClick="buttonClicked"
            android:text="="
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />-->
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>